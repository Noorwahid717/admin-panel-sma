{
  "name": "admin-panel-sma",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "dev": "concurrently -n api,worker,admin -c green,magenta,cyan \"pnpm --filter @apps/api dev\" \"pnpm --filter @apps/worker dev\" \"pnpm --filter @apps/admin dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "format": "pnpm -r format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "22.5.4",
    "concurrently": "8.2.2",
    "eslint": "9.9.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "prettier": "3.3.3",
    "typescript": "5.5.4",
    "@typescript-eslint/eslint-plugin": "8.5.0",
    "@typescript-eslint/parser": "8.5.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
