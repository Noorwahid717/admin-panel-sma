{
  "name": "admin-panel-sma",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "dev": "concurrently -n api,worker,admin -c green,magenta,cyan \"pnpm --filter @apps/api dev\" \"pnpm --filter @apps/worker dev\" \"pnpm --filter @apps/admin dev\"",
    "build": "pnpm -r build",
    "lint": "eslint .",
    "test": "pnpm -r test",
    "typecheck": "tsc -b --pretty false",
    "format": "pnpm -r format",
    "prepare": "husky install",
    "compose:up": "docker compose -f docker-compose.dev.yml up -d --remove-orphans",
    "compose:seed": "docker compose -f docker-compose.dev.yml -f docker-compose.seed.yml up --abort-on-container-exit --exit-code-from seed --remove-orphans",
    "compose:down": "docker compose -f docker-compose.dev.yml down --remove-orphans",
    "compose:dev": "docker compose -f docker-compose.dev.yml -f docker-compose.dev.override.yml up --build --remove-orphans",
    "print-superadmin": "node scripts/print-superadmin.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "22.5.4",
    "@typescript-eslint/eslint-plugin": "8.5.0",
    "@typescript-eslint/parser": "8.5.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "8.2.2",
    "cross-env": "7.0.3",
    "eslint": "9.9.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "prettier": "3.3.3",
    "supertest": "7.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.44.1",
    "vitest": "3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "msw": "^2.11.5",
    "zod": "3.23.8"
  }
}
