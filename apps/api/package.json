{
  "name": "@apps/api",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "main": "dist/api/src/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start": "node dist/api/src/main.js",
    "start:prod": "NODE_ENV=production node dist/api/src/main.js",
    "lint": "eslint \"src\"",
    "test": "vitest --run",
    "test:e2e": "vitest --run -c vitest.e2e.config.ts",
    "migrate:generate": "drizzle-kit generate",
    "migrate:push": "drizzle-kit push",
    "seed": "tsx src/db/seed.ts",
    "db:reset": "drizzle-kit push --force && tsx src/db/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.896.0",
    "@aws-sdk/s3-request-presigner": "3.896.0",
    "@nestjs/axios": "3.0.2",
    "@nestjs/common": "10.3.9",
    "@nestjs/config": "3.2.2",
    "@nestjs/core": "10.3.9",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.3.9",
    "@nestjs/throttler": "6.4.0",
    "@supabase/storage-js": "2.5.3",
    "argon2": "0.41.1",
    "bullmq": "4.18.3",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "0.44.5",
    "express-rate-limit": "^8.1.0",
    "helmet": "7.1.0",
    "ioredis": "5.4.1",
    "jsonwebtoken": "9.0.2",
    "nanoid": "5.0.7",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pg": "8.11.5",
    "reflect-metadata": "0.1.14",
    "rxjs": "7.8.1",
    "string-width": "7.1.0",
    "supertest": "7.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "10.0.3",
    "@nestjs/testing": "10.3.9",
    "@anatine/esbuild-decorators": "0.2.19",
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "1.4.5",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
