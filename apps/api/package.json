    "@types/node": "22.5.4",
    "@types/passport-jwt": "4.0.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "6.0.3",
    "drizzle-kit": "0.31.5",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.19.0",
    "@vitest/coverage-v8": "3.2.4",
    "pg-mem": "3.0.5",
    "vitest": "3.2.4",
    "vite-tsconfig-paths": "4.3.2"
  }
