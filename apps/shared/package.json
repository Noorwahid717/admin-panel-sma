{
  "name": "@apps/shared",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "output/index.js",
  "types": "output/index.d.ts",
  "exports": {
    ".": {
      "types": "./output/index.d.ts",
      "import": "./output/index.js",
      "require": "./output/index.js"
    },
    "./db/schema": {
      "types": "./output/db/schema.d.ts",
      "import": "./output/db/schema.js",
      "require": "./output/db/schema.js"
    },
    "./db/client": {
      "types": "./output/db/client.d.ts",
      "import": "./output/db/client.js",
      "require": "./output/db/client.js"
    },
    "./schemas": {
      "types": "./output/schemas/index.d.ts",
      "import": "./output/schemas/index.js",
      "require": "./output/schemas/index.js"
    },
    "./constants": {
      "types": "./output/constants/index.d.ts",
      "import": "./output/constants/index.js",
      "require": "./output/constants/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint \"src\"",
    "test": "vitest",
    "dev": "pnpm build --watch",
    "format": "prettier --write src"
  },
  "dependencies": {
    "drizzle-orm": "0.44.5",
    "pg": "8.11.5",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/pg": "8.15.5",
    "tsc-alias": "^1.8.10",
    "tslib": "2.6.3",
    "vitest": "1.6.0"
  }
}
