{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "paths": {
      "@shared/*": ["../../apps/shared/src/*", "../../apps/shared/dist/*"],
      "@api/*": ["../../apps/api/src/*"],
      "@worker/*": ["../../apps/worker/src/*"]
    }
  },
  "include": ["src/**/*"]
}
